<% load_comments(request).each do |comment| %>
  <p class="comment_content">
    <p class="comment_name"><strong><%= comment[:name] %></strong></p>
    <p class="comment_body"><%= comment[:body] %></p>
    <p class="comment_time">Posted on: <%= comment[:create].to_formatted_s(:long_ordinal) %></p>	
  </p>
<% end %>
