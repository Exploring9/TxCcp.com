<div id="post_content">
	<h3 class="title">
	  <%= @post[:title] %>
	</h3>
	 
	
	<p class="date">
	  Submitted on
	  <%= @post[:create].to_formatted_s(:long_ordinal) %>
	</p>
	
	<p class="body">
	  Post Type: <%= @post[:post_type]%>
	</p>	 
	
	<p class="body">
	  <%= @post[:body].html_safe %>
	</p>
	<div id="comments">
	  <%=  render "comments/form"  %>
	  <p>Number of Comments: <%= count_comments(request.fullpath) %></p>
	  <%=  render "comments/comment" %>
	</div>
</div>